ImageWidget:
# root は ImageWidget
# self は その関数自体


<ImageWidget>:   # ここで定義して、上で呼び出す
    canvas.before:
        Color:
            rgba: 0.6, 0.6, 0.6, 1
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: 'vertical'  # 画像とボタンを縦に配置
        size: root.size

        Image: 
            source: root.source  # root=ImageWidgetのsourceを指す

        BoxLayout:   # ボタン同士の配置defaultが横だからこのまま
            size_hint_y: 0.3
            padding: 20, 30, 20, 10

            Button:
                id: button1
                text: "restart"
                font_size: 30
                on_press: root.buttonStarted()

            Button:
                id: button2
                text: "random screen"
                font_size: 30
                on_press: root.buttonRandom()

